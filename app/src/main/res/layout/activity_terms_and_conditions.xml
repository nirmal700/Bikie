<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/terms_condition_layout"
    android:layout_gravity="center"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    android:background="@color/Primary_Blue"
    android:orientation="vertical"
    tools:context=".Users.TermsAndConditions">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/bg_terms_condition"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Terms &amp; Conditons"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="20dp"
            android:id="@+id/termsAndConditionsTextView"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/caveatbrushregular1"
            android:text="- Bikie"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="normal"
            tools:targetApi="o" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom"
            android:paddingBottom="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform"
                android:gravity="center_horizontal"
                android:text="Contact Us"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

<!--                <ImageView-->
<!--                    android:id="@+id/to_twitter"-->
<!--                    android:layout_width="30dp"-->
<!--                    android:layout_height="30dp"-->
<!--                    android:background="?attr/selectableItemBackgroundBorderless"-->
<!--                    android:clickable="true"-->
<!--                    android:contentDescription="@null"-->
<!--                    android:focusable="true"-->
<!--                    android:src="@drawable/ic_twitter"-->
<!--                    app:tint="@color/black" />-->

                <ImageView
                    android:id="@+id/to_instagram"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="@null"
                    android:focusable="true"
                    android:src="@drawable/ic_instagram"
                    app:tint="@color/black" />

                <ImageView
                    android:id="@+id/to_gMail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="@null"
                    android:focusable="true"
                    android:src="@drawable/ic_gmail"

                    app:tint="@color/black" />

                <ImageView
                    android:id="@+id/to_gitHub"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="@null"
                    android:focusable="true"
                    android:src="@drawable/ic_whatsapp"
                    app:tint="@color/black" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</ScrollView>


