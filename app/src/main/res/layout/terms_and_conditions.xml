<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/bg_lower"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/baloo"
        android:text="Terms &amp; Conditions"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:targetApi="o" />


    <!-- List of Options -->
    <ScrollView
        android:id="@+id/options_container"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="15dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:includeFontPadding="false"
                android:layout_marginBottom="8dp"
                android:lineSpacingExtra="0dp"
                android:lineSpacingMultiplier="0.8"
                android:text="• A ride cannot commence until all the required documents are uploaded and verified..."
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:includeFontPadding="false"
                android:layout_marginBottom="8dp"
                android:lineSpacingExtra="0dp"
                android:lineSpacingMultiplier="0.8"
                android:text="• A ride cannot commence until all the required documents are uploaded and verified..."
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/baloo"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:lineSpacingMultiplier="0.8"
                android:text="• A ride cannot commence until all the required documents are uploaded and verified..."
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/baloo"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:lineSpacingMultiplier="0.8"
                android:text="• A ride cannot commence until all the required documents are uploaded and verified..."
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/baloo"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:lineSpacingMultiplier="0.8"
                android:text="• A ride cannot commence until all the required documents are uploaded and verified..."
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:includeFontPadding="false"
                android:layout_marginBottom="8dp"
                android:lineSpacingExtra="0dp"
                android:lineSpacingMultiplier="0.8"
                android:text="• A ride cannot commence until all the required documents are uploaded and verified..."
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/baloo"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:lineSpacingMultiplier="0.8"
                android:text="• A ride cannot commence until all the required documents are uploaded and verified..."
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/baloo"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:lineSpacingMultiplier="0.8"
                android:text="• A ride cannot commence until all the required documents are uploaded and verified..."
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:includeFontPadding="false"
                android:layout_marginBottom="8dp"
                android:lineSpacingExtra="0dp"
                android:lineSpacingMultiplier="0.8"
                android:text="• A ride cannot commence until all the required documents are uploaded and verified..."
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
        </LinearLayout>
    </ScrollView>

    <!-- MaterialCheckBoxes -->
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_agree_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:padding="8dp"
        android:text="I Agree to Terms and Conditions."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_agree_license"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:lineSpacingExtra="0dp"
        android:lineSpacingMultiplier="0.8"
        android:includeFontPadding="false"
        android:padding="8dp"
        android:text="I Agree to provide valid driver's license and ID proof before the ride starts."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_cancellation_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/baloo"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:lineSpacingMultiplier="0.8"
        android:text="Before proceeding with your booking, you can check our cancellation policy."
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="@color/black" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_proceed"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/baloo"
        android:hint="Proceed"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:textStyle="normal"
        app:backgroundTint="@color/Primary_Blue"
        app:cornerRadius="5dp"
        app:startIconTint="@color/black"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp"
        tools:ignore="VisualLintButtonSize"
        tools:targetApi="o" />


</LinearLayout>